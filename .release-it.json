{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "requireCleanWorkingDir": false,
    "requireBranch" : "master"
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "tokenRef": "GITHUB_TOKEN",
    "assets": [
      "dist/widget-sdk.js",
      "dist/widget-sdk.d.ts"
    ]

  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "header": "# Changelog"
    }
  },
  "hooks": {
    "after:bump": "npm run build && git add dist/widget-sdk.js dist/widget-sdk.d.ts"
  }
}
